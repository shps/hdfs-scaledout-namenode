# Config file for collectd(1).
include_recipe "collectd::interval_10"

default[:collectd][:server] = "localhost"


LoadPlugin syslog
<Plugin syslog>
	LogLevel info
</Plugin>

LoadPlugin network
<Plugin network>
	Listen "<%= @node[:fqdn] %>"
</Plugin>

<Plugin rrdtool>
	DataDir "<%= @node[:collectd][:data_dir] %>"
