# Config file for collectd(1).

Hostname "<%= @node[:fqdn] %>"
FQDNLookup true
BaseDir "<%= @node[:collectd][:base_dir] %>"
PluginDir "<%= @node[:collectd][:plugin_dir] %>"
TypesDB "<%= @node[:collectd][:types_db].join('", "') %>"
Interval <%= @node[:collectd][:interval] %>
ReadThreads <%= @node[:collectd][:read_threads] %>

LoadPlugin syslog

<Plugin syslog>
	LogLevel info
</Plugin>

LoadPlugin network

<Plugin network>
	Listen "<%= @node[:fqdn] %>"
</Plugin>

<Plugin rrdtool>
	DataDir "<%= @node[:collectd][:data_dir] %>"
#	CacheTimeout 120
#	CacheFlush 900
#	WritesPerSecond 30
#	RandomTimeout 0
#
</Plugin>


Include "/etc/collectd/plugins/*.conf"
Include "/etc/collectd/thresholds.conf"

