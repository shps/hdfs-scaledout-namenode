#!/bin/sh
ID=63
PID_FILE=<%= "#{node[:ndb][:log_dir]}/ndb_${ID}.pid" %> 
PID=`cat $PID_FILE`
echo ""
echo "Killing mgm server with process-id $PID "
echo ""
kill $PID
wait_pid_removed=10
timeout=0
while [ $timeout -lt $wait_pid_removed ] ; do
    sleep 1
    test ! -s $PID_FILE && break
    echo -n "."
    timeout=`expr $timeout + 1`
done
echo ""
