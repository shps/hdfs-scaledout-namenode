#!/bin/sh

BACKUP_DIR="<%= @ndb_dir %>/backup/"

case $1 in
    "-h"|"--help"|"-help")
	echo ""
	echo "Usage: prog_name [-d BACKUP-DIR \(default=<%= @ndb_dir %>/backup\)]"
	echo ""
	echo "Creates a backup of the cluster, and stores it in BACKUP-DIR on all the data nodes."
	echo ""
	exit 0
	;;      
    "-d")
        shift
        BACKUP_DIR=""
        ;;
esac 

echo "Starting backup at: @connect_string"
<%= @mysql_dir %>/bin/ndb_mgm -c <%= @connect_string %> -e "start backup"

# TODO - need to return backup-id to the client
exit $?

