#!/bin/sh
ID=<%= @node_id %>
PID_FILE=<%= "#{node[:ndb][:log_dir]}/ndb_${ID}.pid" %> 
PID=`cat $PID_FILE`
echo ""
echo "Killing ndbd with process-id $PID " >> $PID_FILE
echo ""
kill $PID
wait_pid_removed=10
timeout=0
while [ $timeout -lt $wait_pid_removed ] ; do
    sleep 1
    test ! -s $PID_FILE && break
    echo -n "."
    timeout=`expr $timeout + 1`
done
echo ""

