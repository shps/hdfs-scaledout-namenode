#!/bin/sh 


MGM_CONN=cloud11:1186
SKIP_MYSQLDS=0

while [ $# -gt 0 ]; do
  case "$1" in
    -h|--help|-help)
              echo "usage: <prog> [ -c | --connectstring MGMD_HOST:MGMD_PORT ] [ -s|--skip-mysqlds ]"
	      echo ""
	      echo "connectstring is set to cloud11:1186"
	      exit 0 
	      ;;
    -c|--connectstring)
              shift
	      MGM_CONN=$1
	      break 
	      ;;
    -s|--skip-mysqlds)
              SKIP_MYSQLDS=1
	      ;;
	   * )
              echo "Unknown option '$1'" 
              exit -1
  esac
  shift       
done


<%= @mysql_dir %>/bin/ndb_mgm -c $MGM_CONN -e "shutdown"


if [ $SKIP_MYSQLDS -eq 0 ] ; then
	    echo "Stopping MySQL Server Number at cloud11"
	    ssh root@cloud11 <%= @ndb_dir %>/scripts/stop-mysqld-1.sh
else
  echo "Skipping stopping MySQL Server Number at cloud11"
fi
                 
