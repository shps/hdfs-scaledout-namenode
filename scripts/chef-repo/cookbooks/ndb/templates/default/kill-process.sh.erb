#!/bin/sh

if [ $# -ne 4 ] ; then
 echo "Incorrect args. Usage: kill-process name id pid_file inc_pid"
 exit 1
fi

NAME=$1
ID=$2
PID_FILE=$3
INC_PID=$4

if [ ! -f $PID_FILE  ] ; then 
    echo "No $NAME process to stop - no PID file found at $PID_FILE."
    exit 0
fi

PID=`cat $PID_FILE`
if [ $INC_PID -eq 1 ] ; then
  echo "Incremeting the PID by 1 to skip over watchdog process"
  PID=`expr $PID + 1`
fi
echo "Killing $NAME with process-id $PID "
(kill -TERM $PID) 2> /dev/null
RES=$?
wait_pid_removed=10
timeout=0
while [ $timeout -lt $wait_pid_removed ] ; do
    sleep 1
    (! kill -0 $PID) 2> /dev/null && break
    echo -n "."
    timeout=`expr $timeout + 1`
done
if [ $timeout -eq $wait_pid_removed ] ; then
  kill -9 $PID
  RES=$?
fi

exit $RES