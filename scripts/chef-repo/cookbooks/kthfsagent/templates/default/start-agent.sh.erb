#!/bin/sh
# returns '0' if agent started successfully
# returns '1' if agent already running

echo "Checking if the agent is running...."
echo ""
PID_FILE=<%= node[:kthfs][:pid_file] %>
#PID=`cat $PID_FILE`
if [$PID == ""]; then
	echo "Agent is not running."
	nohup <%= node[:kthfs][:base_dir] %>/agent.py & > /dev/null
else
	echo "Agent is already running."
    exit 1
fi
echo ""
